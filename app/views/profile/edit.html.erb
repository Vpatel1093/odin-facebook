<h1>Edit profile</h1>
<%= form_for(@profile) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.submit "Save changes" %>
<% end %>

<h1>
  <%= gravatar_for(current_user, size: 150) %><br>
  <a href="http://gravatar.com/emails" target="_blank">Change</a>
</h1>
