<li>
  <p><%= post.content %></p>
  <p><%= link_to "Like", post_likes_path(post, @like), method: :post %></p><span><%= post.likes.size %></span>
  <p><% if post.user.id == current_user.id %>
     <%= link_to "Delete", post_path(id: post.id), method: :delete %>
     <% end %></p>
  <p><%= link_to post.user.full_name, user_path(post.user) %><br>
     Posted <%= time_ago_in_words(post.created_at) %> ago.</p>
  <%= render post.comments %>
  <p><%= render 'shared/comment_form', post: post %></p>
</li>
