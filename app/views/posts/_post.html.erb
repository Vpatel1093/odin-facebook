<li>
  <p><%= post.content %></p>
  <p><% if current_user.has_liked_this?(post) %>
       <%= link_to "Unlike", post_like_path(post, @like, id: current_user.id), method: :delete %>
     <% else %>
       <%= link_to "Like", post_likes_path(post, @like), method: :post %>
     <% end %>
     <span> <%= pluralize(post.likes.size, 'like') %></span></p>
  <p><% if post.user.id == current_user.id %>
       <%= link_to "Delete", post_path(id: post.id), method: :delete %>
     <% end %></p>
  <p><%= link_to post.user.full_name, user_path(post.user) %><br>
     Posted <%= time_ago_in_words(post.created_at) %> ago.</p>
  <%= render post.comments %>
  <p><%= render 'shared/comment_form', post: post %></p>
</li>
