<h1>Edit profile</h1>
<%= form_for(@profile) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.submit "Save changes" %>
<% end %>

<h1>
  <%= gravatar_for current_user %>
  <a href="http://gravatar.com/emails" target="_blank">change</a>
</h1>
