<div class="users-index">
	<h1>Users</h1>

	<table>
		<% @users.each do |user| %>
		  <tr class="users-table-row">
		    <td><%= gravatar_for(user, size: 75) %></td>
		    <td id="user-name"><%= link_to user.full_name, user_path(user) %></td>
		    <td id="friend-status">
	    		<% if current_user.friends_with?(user) %>
	          <p class="btn-primary">Friends</p>
	        <% elsif current_user.pending_friends?(user) %>
	          <p class="btn-primary">Pending</p>
	        <% elsif current_user.id == user.id %>
	        <% else %>
	         	<p class="btn-primary"><%= link_to "Add friend", friend_requests_path(friend_id: user.id), method: :post %></p>
	        <% end %>
		    </td>
		  </tr>
		<% end %>
	</table>
</div>
