<h1>Users</h1>

<table>
  <% @users.each do |user| %>
    <tr>
      <td><%= gravatar_for(user, size: 150) %></td>
      <td><%= link_to user.full_name, user_path(user) %></td>
      <td><% if current_user.friends_with?(user) %>
            Friends
          <% elsif current_user.pending_friends?(user) %>
            Pending
          <% else %>
            <%= link_to "Add friend", friend_requests_path(friend_id: user.id), method: :post %>
          <% end %>
      </td>
    </tr>
  <% end %>
</table>
